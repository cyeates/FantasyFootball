@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="FantasyFootballCtrl">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <h1>Scoring Settings</h1>
                <p>Enter your fantasy football league's scoring settings.</p>
                <div id="settings">
                    <form kendo-validator="validator" class="form-horizontal">

                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-sm-1 k-invalid-msg" data-for="PassYards"></div>
                                <span class="col-xs-3">
                                    <input name="PassYards" type="number" class="form-control input-sm" 
                                           ng-model="settings.passYards" 
                                           ng-change="refresh()" 
                                           min="1" 
                                           required
                                           data-required-msg="This field is required." 
                                           data-min-msg="Must be greater than 0."/>
                                </span>
                                <label class="control-label">passing yards per point.</label>

                            </div>
                            <div class="form-group">
                                <span class="col-xs-3">
                                    <input name="PassTDs" type="number" class="form-control input-sm" ng-model="settings.passTds" ng-change="refresh()" />
                                </span>
                                <label class="control-label">points for every passing TD.</label>

                            </div>

                            <div class="form-group">
                                <span class="col-xs-3">
                                    <input name="PassInt" type="number" class="form-control input-sm" ng-model="settings.passInt" ng-change="refresh()" />
                                </span>
                                <label class="control-label">points deducted per INT thrown.</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-sm-1 k-invalid-msg" data-for="RushYards"></div>
                                <span class="col-xs-3">
                                    <input name="RushYards" type="number" class="form-control input-sm" 
                                           ng-model="settings.rushYards" 
                                           ng-change="refresh()" 
                                           min="1"
                                           required
                                           data-required-msg="This field is required."
                                           data-min-msg="Must be greater than 0." />
                                </span>
                                <label class="control-label">rushing yards per point.</label>
                            </div>
                            <div class="form-group">
                                <span class="col-xs-3">
                                    <input name="RushTDs" type="number" class="form-control input-sm" ng-model="settings.rushTds" ng-change="refresh()" />
                                </span>
                                <label class="control-label">points for every rushing TD.</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <span class="col-xs-3">
                                    <input name="Receptions" type="number" class="form-control input-sm" ng-model="settings.receptions" ng-change="refresh()" />
                                </span>
                                <label class="control-label">points per reception.</label>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-1 k-invalid-msg" data-for="ReceivingYards"></div>
                                <span class="col-xs-3">
                                    <input name="ReceivingYards" type="number" class="form-control input-sm" 
                                           ng-model="settings.receptionYards" 
                                           ng-change="refresh()"
                                           min="1"
                                           required
                                           data-required-msg="This field is required."
                                           data-min-msg="Must be greater than 0." />
                                </span>
                                <label class="control-label">receiving yards per point.</label>
                            </div>
                            <div class="form-group">
                                <span class="col-xs-3">
                                    <input name="ReceivingTDs" type="number" class="form-control input-sm" ng-model="settings.receptionTds" ng-change="refresh()" />
                                </span>
                                <label class="control-label">for every receiving TD.</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <h1>Projections</h1>
                <p>Projections will update as you adjust the scoring settings.</p>
                <div id="players">
                    <div kendo-tab-strip k-animation="false">
                        <ul>
                            <li class="k-state-active">QB</li>
                            <li>RB</li>
                            <li>WR</li>
                            <li>TE</li>
                        </ul>

                        <div id="qb">
                            <div kendo-grid="qbGrid" k-options="qbGridOptions"></div>
                        </div>

                        <div id="rb">
                            <div kendo-grid="rbGrid" k-options="rbGridOptions"></div>
                        </div>

                        <div id="wr">
                            <div kendo-grid="wrGrid" k-options="wrGridOptions"></div>
                        </div>

                        <div id="te">
                            <div kendo-grid="teGrid" k-options="teGridOptions"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
